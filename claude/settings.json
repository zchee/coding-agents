{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "model": "opus[1m]",
  "effortLevel": "high",
  "alwaysThinkingEnabled": true,
  "cleanupPeriodDays": 99999,
  "includeCoAuthoredBy": true,
  "permissions": {
    "allow": [
      "TodoWrite"
    ],
    "deny": [
      "Read(third_party)",
      "Read(_tmp)",
      "Read(.ruff_cache)",
      "Read(.venv)"
    ],
    "defaultMode": "dontAsk",
    "additionalDirectories": [
      "~/src",
      "~/go/src"
    ]
  },
  "enableAllProjectMcpServers": true,
  "forceLoginMethod": "console",
  "outputStyle": "default",
  "spinnerTipsEnabled": true,
  "autoUpdatesChannel": "latest",
  "skipDangerousModePermissionPrompt": true,
  "fastMode": true,
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.tool_input.file_path | select(endswith(\".go\"))' | xargs -r -I {} sh -c 'gofmt -s -w \"$1\"' _ {}"
          },
          {
            "type": "command",
            "command": "jq -r '.tool_input.file_path | select(endswith(\".tf\"))' | xargs -r -I {} sh -c 'terraform fmt \"$1\"' _ {}"
          }
        ]
      }
    ],
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.message' | xargs -r -I {} sh -c '/Applications/claude-terminal-notifier.app/Contents/MacOS/terminal-notifier -title 'Claude Code' -sender 'com.anthropic.claudefordesktop' -message \"$1\"' _ {}"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "pnpx ccstatusline@latest",
    "padding": 1
  }
}
